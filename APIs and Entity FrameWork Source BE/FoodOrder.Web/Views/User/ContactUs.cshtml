@model FoodOrder.DataAccess.Models.ContactMst;

<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    
    <style>
     
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "poppins", sans-serif;
      }

      .container {
        width: 100%;
        height: 100vh;

        display: flex;
        align-items: center;
        justify-content: center;
      }

      form {
        background: #fff;
        display: flex;
        flex-direction: column;
        padding: 2vw 4vw;
        width: 90%;
        max-width: 600px;
        border-radius: 10px;
      }
      form h3 {
        color: chartreuse;
        font-weight: 800;
        margin-bottom: 20px;
        font-size: 50pt;
        text-shadow: 20px;
      }

      form input,
      form textarea {
        border: 0;
        margin: 10px;
        padding: 20px;
        outline: none;
        background: #f5f5f5;
        font-size: 16px;
        border-radius: 10px;
      }

      form button {
        padding: 15px;
        background: #ff5361;
        color: white;
        font-size: 18px;
        border: 0;
        outline: none;
        cursor: pointer;
        width: 20px auto;
        border-radius: 30px;
      }

      body,
      html {
        height: 100%;
        background-color: beige;
      }

      .container-fluid {
        background-color: bisque;
      }

      label {
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        margin: 10px 0px;
        background-color: aquamarine;
      }
      input {
        font-size: larger;
      }

      #myform {
       
        background: #6a11cb;

       
        background: -webkit-linear-gradient(
          to right,
          rgba(106, 17, 203, 1),
          rgba(37, 117, 252, 1)
        );

        background: linear-gradient(
          to right,
          rgba(106, 17, 203, 1),
          rgba(37, 117, 252, 1)
        );
      }

    </style>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    

    <div class="container formdiv">
      <form id="myform" class="text-center" method="post" name="contactForm" action=/User/ContactThankYou>
        <h3>Contact Us</h3>
        <input type="text" id="FullName" name="FullName" placeholder="Full Name" required value=@Model.FullName />
        <input type="email" id="Email" name="Email" placeholder="Email Id" required value=@Model.Email />
       
        <textarea
          id="Message" name="Message" rows="4" placeholder="How can We help you?">@Model.Message</textarea>
        <button type="submit">Send</button>
      </form>
    </div>

   
  </body>
</html>
