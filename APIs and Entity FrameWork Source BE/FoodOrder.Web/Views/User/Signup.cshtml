@model FoodOrder.DataAccess.Models.UserMst;

    
    
    
<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <style>
      #mysigninform {
        background-color: blanchedalmond;
        padding: 50px;
        border: black;
        margin-top: 20px;
        border: ridge;
        margin: 20px;
      }
      #role{
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">LOGO</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/Home/Index"
                  >Home</a>
              </li>

              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/User/LoginView"
                  >Login</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <form method="post" class="row g-3" id="mysigninform" onsubmit="Validate(e)" action="/User/C_OrderPage">
      <h2 class="HEADING" style="text-align:center;">SIGN UP FORM</h2>
      <div class="col-md-6" id="Emailpad">
        <label for="Fname" class="form-label">First Name</label>
        <input type="text" class="form-control" id="Fname" name="Fname" value=@Model.Fname />
      </div>
      <div class="col-md-6">
        <label for="Lname" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="Lname" name="Lname" value=@Model.Lname />
      </div>
      <div class="col-12">
        <label for="Address" class="form-label">Address</label>
        <input
          type="text"
          class="form-control"
          id="Address"
          placeholder="Address"
          name="Address"
          value=@Model.Address
        />
      </div>
    
      <div class="col-md-6">
        <label for="City" class="form-label">City</label>
        <input type="text" class="form-control" id="City" name="City" value=@Model.City />
      </div>
      <div class="col-md-4">
        <label for="Gender" class="form-label">Gender</label>
        <select id="Gender" class="form-select" name="Gender">
          <option selected>Choose one</option>
          <option>Male</option>
          <option>Female</option>
          <option>Other</option>
          @Model.Gender
        </select>
      </div>
      <div class="col-md-2">
        <label for="Pincode" class="form-label">Pin Code</label>
        <input type="text" class="form-control" id="Pincode" name="Pincode" value=@Model.Pincode />
      </div>
      <div class="col-md-6" id="Emailpad">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value=@Model.Email />
      </div>
      <div class="col-md-6">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" value=@Model.Password />
      </div>
      <div >
        <button type="submit" class="btn btn-primary"> 
           Sign Up
        </button><br>
        <span>already a member?</span>
        <div class="col-6">
          <a id="register" aria-current="page" href="/User/LoginView">Login</a>
        </div>
      </div>
      
    </form>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <script type="text/javascript">
      $("#mysigninform").submit(function Validate(e){
       var validate=false;
       var fname=$("#Fname").val();
       var lname=$("#Lname").val();
       var addr=$("#Address").val();
       var city=$("#City").val();
       var gender=$("#Gender").val();
       var pincode=$("#Pincode").val();
       var pass=$("#Password").val()
       var email=$("#Email").val();
        if(fname ==""){
          alert('First name can\'t be empty');
          validate=true;
        }
        if(lname ==""){
          alert('Last name can\'t be empty');
          validate=true;
        }
        if(addr ==""){
          alert('Address can\'t be empty');
          validate=true;
        }
        if(city ==""){
          alert('City can\'t be empty');
          validate=true;
        }
        if(gender ==""){
          alert('Gender can\'t be empty');
          validate=true;
        }
        if(pincode ==""){
          alert('Pincode can\'t be empty');
          validate=true;
        }
        if(email == ""){
          alert('Email can\'t be empty');
          validate=true;
        }
        if(pass == ""){
          alert('Password can\'t be empty');
          validate=true;
        }
        
        if (validate) {
            e.preventDefault();
            return false;
        }
        
      });
      
        
    </script>
  </body>
</html>
