@model FoodOrder.DataAccess.Models.PaymentMst;
<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order</title>
    <style>
      .container-fluid{
        background-color: bisque;
      }
      #mysigninform {
        background-color: blanchedalmond;
        padding: 100px;
        border: black;

        margin: 20px;
        border: ridge;
        align-items: center;
      }
      #contact {
        background-color: coral;

        text-align: center;
        text-decoration: none;
      }
      #cart {
        align-items: center;
      }
      .second-section {
        margin-top: 10px;
      }
      .first-section {
        margin-top: 100px;
      }
      #mytable{
        border: ridge;
        padding:30px;
        margin: 20px;
        margin-right: 40px;
      }

      .footer{
  background:burlywood;
  text-align: center;
}

.footer .share{
  display: flex;
  gap:1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  color: #fff;
}

.footer .credit{
  padding:2.5rem 1rem;
  color:#000;
  font-weight: normal;
  font-size: 2rem;
}

.footer .credit span{
  color:var(--red);
}
.btn{
  display: inline-block;
  padding:.8rem 3rem;
  border:.2rem solid var(--red);
  color:var(--red);
  cursor: pointer;
  font-size: 1.7rem;
  border-radius: .5rem;
  position: relative;
  overflow: hidden;
  z-index: 0;
  margin-top: 1rem;
}
.btn::before{
  content: '';
  position: absolute;
  top:0; right: 0;
  width:0%;
  height:100%;
  background:var(--red);
  transition: .3s linear;
  z-index: -1;
}

.btn:hover::before{
  width:100%;
  left: 0;
}

.btn:hover{
  color:#fff;
}


     
    </style>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">LOGO</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/User/C_OrderPage"
                  >Home</a
                >
              </li>
              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/User/C_OrderPage"
                  >Order</a
                >
              </li>

            
              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/User/LoginView"
                  >Log Out</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    

    <section class="second-section">

      <form class="row g-3" method="post" id="payment" action="/User/ThankYou">
       
       
        <div class="col-3" >
          <label  class="form-label">Bank Name</label>
          <input type="text" class="form-control" id="BankName" name="BankName" value=@Model.BankName />
        </div>
        <div class="col-3">
          <label for="inputPassword4" class="form-label">CARD NO</label>
          <input type="password" class="form-control" id="CardNo" name="CardNo" value=@Model.CardNo />
        </div>
        <div class="col-3">
          <label for="inputPassword4" class="form-label">CVV</label>
          <input type="password" class="form-control" id="Ccv" name="Ccv" value=@Model.Cvv />
        </div>
        <div class="col-3">
          <label for="Email" class="form-label">Email</label>
          <input type="email" class="form-control" id="Email" name="Email" value=@Model.Email />
        </div>
       
        <div id="status">
          <div class="col-12 text-center" >
            <button type="submit" class="btn btn-primary" style="text-align:center" >CONFIRM PAYMENT</button>
          </div>
         
        </div>
        
        
      </form>
    </section>
    

    <section class="third-section" >
      <div class="col-12 text-center" style="text-decoration: none; padding-top: 10px;">
        <a
          class="h1 m-0 mt-2 text-center" href="#"
          style="text-decoration: none; padding-top: 10px"
          >CONTACT DETAILS</a
        >
      </div>
    </section>

    <!-- FOOTER -->

    <section class="footer" >
      <div class="share">
        <a href="#" class="btn">facebook</a>
        <a href="#" class="btn">twitter</a>
        <a href="#" class="btn">instagram</a>
        <a href="#" class="btn">pinterest</a>
        <a href="#" class="btn">linkedin</a>
      </div>

      <h1 class="credit">
        all rights reserved!
      </h1>
    </section>
  </body>
</html>
