@model FoodOrder.DataAccess.Models.UserMst;

<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log In</title>

    <style>
      .container-fluid {
        background-color: bisque;
      }
      #mysigninform {
        background-color: blanchedalmond;
        padding: 10px;
        border: black;

        margin: 20px;
        border: ridge;
        align-items: center;
      }
      #contact {
        background-color: coral;

        text-align: center;
        text-decoration: none;
      }
      #cart {
        align-items: center;
      }
      .second-section {
        margin-top: 10px;
      }
      .first-section {
        margin-top: 100px;
      }
      #mytable {
        border: ridge;
        padding: 30px;
        margin: 20px;
        margin-right: 40px;
      }
      #gradient-custom {
        background: #6a11cb;

        background: -webkit-linear-gradient(
          to right,
          rgba(106, 17, 203, 1),
          rgba(37, 117, 252, 1)
        );

        background: linear-gradient(
          to right,
          rgba(106, 17, 203, 1),
          rgba(37, 117, 252, 1)
        );
      }
    </style>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

   
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">LOGO</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/Home/Index"
                  >Home</a
                >
              </li>
              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/User/Signup"
                  >SignUp</a
                >
              </li>

              <li class="nav-item">
                <a
                  id="register"
                  class="nav-link active float-right"
                  aria-current="page"
                  href="/User/ContactUs"
                  >Contact us</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <form method="post" class="row g-3 text-center align-items" id="gradient-custom" onsubmit="Validate(e)" action="/User/Home">     
        <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div
              class="card bg-light text-black"
              style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">
                <div class="mb-md-5 mt-md-4 pb-5">
                  <h2
                    class="fw-bold mb-2 text-uppercase"
                    style="padding-bottom: 10px">
                    Login
                  </h2>

                  <div class="form-outline form-white mb-4">
                    <input type="email" id="Email" name="Email" class="form-control form-control-lg" value=@Model.Email />
                    <label class="form-label" for="Email">Email</label>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <input type="password" id="Password" name="Password" class="form-control form-control-lg" value=@Model.Password />
                    <label class="form-label" for="Password"
                      >Password</label
                    >
                  </div>

                  <button type="submit" class="btn btn-primary">Login</button>
                  
                    
                </div>

                <div>
                  <p class="mb-0">
                    Don't have an account?
                    <a href="/User/Signup" class="text-black-50 fw-bold"
                      >Sign Up</a
                    >
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <!-- Validation -->

    <script type="text/javascript">
      $("#gradient-custom").submit(function Validate(e){
       var validate=false;
        var un=$("#Email").val();
        var pass=$("#Password").val()
        if(un==""){
          alert('email can\'t be empty');
          validate=true;
        }
        if(pass ==""  ){
          alert('password can\'t be empty');
          validate=true;
        }
        
        if (validate) {
                 e.preventDefault();
                    return false;
            }
        
      });
      
        
    </script>
  </body>
</html>

