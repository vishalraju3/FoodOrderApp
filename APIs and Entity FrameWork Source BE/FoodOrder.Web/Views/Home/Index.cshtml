}
.card {
  width: 100%;
  height: 200px;
  background-color: white;
  border: none;
  border-radius: 10px;
  box-shadow: 1px 1px 10px #ccc;
  overflow: hidden;
  transition: box-shadow 0.3s;
  margin-bottom: 10px;
  text-align: justify;
}
.card:hover {
  box-shadow: 1px 1px 10px #000;
  cursor: pointer;
}
.card-bottom {
  position: absolute;
  background-color: white;
  height: 50px;
  width: 100%;
