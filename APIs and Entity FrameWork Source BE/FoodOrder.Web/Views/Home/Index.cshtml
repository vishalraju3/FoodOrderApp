  align-items: center;
}
#contact {
  background-color: coral;

  text-align: center;
  text-decoration: none;
}
#cart {
  align-items: center;
}
.second-section {
  margin-top: 10px;
}
.first-section {
  margin-top: 100px;
}
#mytable {
  border: ridge;
  padding: 30px;
  margin: 20px;
  margin-right: 40px;
}
.footer{
  background:burlywood;
  text-align: center;
}

.footer .share{
  display: flex;
  gap:1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  color: #fff;
}

.footer .credit{
  padding:2.5rem 1rem;
  color:#000;
  font-weight: normal;
  font-size: 2rem;
}

.footer .credit span{
  color:var(--red);
}
.btn{
  display: inline-block;
  padding:.8rem 3rem;
  border:.2rem solid var(--red);
  color:var(--red);
  cursor: pointer;
  font-size: 1.7rem;
  border-radius: .5rem;
  position: relative;
  overflow: hidden;
  z-index: 0;
  margin-top: 1rem;
}
.btn::before{
  content: '';
  position: absolute;
  top:0; right: 0;
  width:0%;
  height:100%;
  background:var(--red);
  transition: .3s linear;
  z-index: -1;
}

.btn:hover::before{
  width:100%;
  left: 0;
}

.btn:hover{
  color:#fff;
}







